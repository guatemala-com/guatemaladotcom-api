# Database
DATABASE_URL=your-database-url

# MySQL Database Configuration (for docker-compose.yml)
MYSQL_ROOT_PASSWORD=your-mysql-root-password
MYSQL_DATABASE=your-database-name
MYSQL_USER=your-mysql-username
MYSQL_PASSWORD=your-mysql-password

# Path to SQL dump file for database initialization
# Example: /Users/your_username/Code/dumps/aprende_db-020725.sql
SQL_DUMP_PATH=/path/to/your/sql/dump/file.sql

# WordPress API
WORDPRESS_API_URL=your-wordpress-url

# APP URL
APP_URL=your-app-url

# Application
PORT=your-port
NODE_ENV=your-node-env

# Comma-separated list of allowed origins for CORS
# Use * to allow all origins (not recommended for production)
ALLOWED_ORIGINS=your-allowed-origins

# OAuth 2.0 & JWT Configuration
# Paths to RSA keys (generate with: node scripts/generate-keys.js)
JWT_PRIVATE_KEY_PATH=your-private-pem-path
JWT_PUBLIC_KEY_PATH=your-public-pem-path
JWT_EXPIRES_IN=your-jwt-expires-in
JWT_ISSUER=your-jwt-issuer
JWT_AUDIENCE=your-jwt-audience

# OAuth Clients (JSON array for production)
# OAUTH_CLIENTS=[{"client_id":"your_client_id","client_secret":"your_client_secret"}]

# Refresh Token Configuration
REFRESH_TOKEN_ENABLED=true
REFRESH_TOKEN_EXPIRES_IN=604800  # 7 days (in seconds)
REFRESH_TOKEN_ROTATION=true 

# Rate Limiting (optional - defaults are set in the module)
# THROTTLE_TTL=your-throttle-ttl
# THROTTLE_LIMIT=your-throttle-limit