# Database
DATABASE_URL="mysql://username:password@localhost:3306/guatemala_db"

# WordPress API
WORDPRESS_API_URL="https://your-wordpress-site.com/wp-json/wp/v2"

# Application
PORT=3000
NODE_ENV=development

# Comma-separated list of allowed origins for CORS
# Use * to allow all origins (not recommended for production)
ALLOWED_ORIGINS=http://localhost:3000,https://guatemala.com,https://www.guatemala.com

# OAuth 2.0 Configuration
# Paths to RSA keys (generate with: node scripts/generate-keys.js)
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem

# JWT Configuration
JWT_EXPIRES_IN=1h
JWT_ISSUER=guatemala.com
JWT_AUDIENCE=guatemala.com-api

# OAuth Clients (JSON array for production)
# OAUTH_CLIENTS=[{"client_id":"your_client_id","client_secret":"your_client_secret"}]

# Rate Limiting (optional - defaults are set in the module)
# THROTTLE_TTL=60000
# THROTTLE_LIMIT=100 